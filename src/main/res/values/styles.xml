<resources>

    <!-- Base application theme. -->
    <!--Light/ theme-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#ECE4E4</item>
        <item name="colorAccent">#FF6D00</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:statusBarColor">#1DFFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:textColorSecondary">#272525</item>
        <item name="backgroundcolor">#FFFFFF</item>
        <item name="cardbackground">#FFFFFF</item>
        <item name="textcolor">#272525</item>
        <item name="tintcolor">#272525</item>
        <item name="buttoncoor">#2196f3</item>
        <item name="android:itemBackground">#FFFFFF</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle_light</item>
        <item name="headingcolor">#FF6D00</item>

    </style>


    <!--Dark Theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#272525</item>
        <item name="colorPrimaryDark">#272525</item>
        <item name="colorAccent">#FF6D00</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:statusBarColor">#272525</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="backgroundcolor">#272525</item>
        <item name="cardbackground">#272525</item>
        <item name="textcolor">#ECE4E4</item>
        <item name="tintcolor">#ECE4E4</item>
        <item name="buttoncoor">#2196f3</item>
        <item name="android:itemBackground">#272525</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle_dark</item>
        <item name="headingcolor">#ECE4E4</item>



    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="MyActionBar.MenuTextStyle_dark"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ECE4E4</item>
    </style>

    <style name="MyActionBar.MenuTextStyle_light"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#272525</item>
    </style>


</resources>